<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Configurations>SL;SL.Release;SL.WorkInProgress;UWP</Configurations>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net472</TargetFramework>
		<StartArguments>"..\..\..\..\src\bin\$(Configuration)\netstandard2.0\OpenSilver.Samples.Showcase.dll"</StartArguments>
	</PropertyGroup>
	
	<PropertyGroup Condition="'$(Configuration)' == 'SL' Or '$(Configuration)' == 'SL.WorkInProgress' Or '$(Configuration)' == 'UWP'">
		<DebugType>full</DebugType>
		<Optimize>false</Optimize>
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'SL.Release'">
		<DebugType>none</DebugType>
		<Optimize>true</Optimize>
		<DefineConstants>TRACE</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="OpenSilver.Simulator" Version="1.0.0-beta.1.22" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\src\OpenSilver.Samples.Showcase.csproj" />
	</ItemGroup>

</Project>